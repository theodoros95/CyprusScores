<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="20dp"
    tools:context=".NotificationsSettings">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Select icon"
        android:textSize="22dp" />

    <RadioGroup
        android:id="@+id/icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/football"
            android:text="  " />

        <RadioButton
            android:id="@+id/icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/bell"
            android:text="  " />

        <RadioButton
            android:id="@+id/icon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/cfa2"
            android:text="  " />

    </RadioGroup>

    <TextView
        android:id="@+id/col"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icons"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Select color"
        android:textSize="22dp" />

    <RadioGroup
        android:id="@+id/colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/col"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/color1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/color2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Green"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/color3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Blue"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/color4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Yellow"
            android:textSize="20dp" />
    </RadioGroup>

    <Button
        android:id="@+id/setok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/colors"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp"
        android:onClick="saveSettings"
        android:text="OK" />

    <Button
        android:id="@+id/viewset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/colors"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/setok"
        android:onClick="viewSettings"
        android:text="View more" />

</RelativeLayout>