<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="10dp"
    tools:context=".NotificationsSettings">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select icon"
        android:id="@+id/text1"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/icons">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon1"
            android:text="  "
            android:drawableRight="@drawable/football"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon2"
            android:layout_marginTop="10dp"
            android:text="  "
            android:drawableRight="@drawable/bell"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon3"
            android:layout_marginTop="10dp"
            android:text="  "
            android:drawableRight="@drawable/cfa2"/>

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icons"
        android:id="@+id/col"
        android:layout_marginTop="20dp"
        android:text="Select color"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/colors"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/col">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red"
            android:textSize="20dp"
            android:id="@+id/color1"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Green"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:id="@+id/color2"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:id="@+id/color3"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yellow"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:id="@+id/color4"/>
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/colors"
        android:text="OK"
        android:id="@+id/setok"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="80dp"
        android:onClick="saveSettings"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/setok"
        android:layout_marginTop="50dp"
        android:layout_below="@id/colors"
        android:id="@+id/viewset"
        android:text="View more"
        android:layout_marginLeft="10dp"
        android:onClick="viewSettings"/>

</RelativeLayout>